@model Course

@await Component.InvokeAsync("Hero", "Course Details")


<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ftco-animate">
                <h2 class="mb-3">@Model.Title</h2>
                <p>@Model.Description</p>
                <t style="color: orange;">Level: @Model.Level</t><br />
                <t>Rank: @Model.Rank</t><br />
                <t>@Model.Price <span class="icon icon-money fa-lg" style="color: lightgreen;"></span></t>
                <p>
                    <img src="@Model.CoverPhoto" alt="" width="300" height="200" class="img-fluid">
                </p>


                <h4><span style="color: blue;" class="icon icon-stars"></span> What You Will Learn</h4>
                <p>@Model.WhatYoullLearn</p>

                <h4><span style="color: blue;" class="icon icon-stars"></span> Suitable For</h4>
                <p>@Model.SuitableFor</p>

                <h4 class="mb-3 mt-5"><span style="color: blue;" class="icon icon-stars"></span> Prerequisities</h4>
                <p>@Model.Prerequisities</p>

                <p>
                    <img src="images/image_8.jpg" alt="" class="img-fluid">
                </p>


                <h4><span style="color: blue;" class="icon icon-stars"></span> Tutorial Content</h4>

                <p>@Model.ContentURL</p>


                <div class="about-author d-flex p-4 bg-light">
                    <div class="bio mr-5">
                        <img src="@Model.Instructor.Image" width="100px" height="100px" href="/Course/CourseByLecturer/@Model.InstructorId" alt="Image placeholder" class="img-fluid mb-4" style="border-radius: 50%;">

                    </div>
                    <div class="desc">
                        <h3>@Model.Instructor.Name @Model.Instructor.Surname </h3>
                        <p>@Model.Title</p>
                        <div class="meta">
                            <div><a href="#"><span class="icon-calendar"></span> @Model.Instructor.LastActivity</a></div>
                            <div><a href="#"><span class="icon-star"></span> @Model.Instructor.Rank</a></div>
                            <div><a href="#"><span class="icon-globe"></span> @Model.Instructor.City</a></div>
                        </div>
                    </div>
                </div>


                @await Component.InvokeAsync("CommentsByCourse")


            </div> <!-- .col-md-8 -->
            <div class="col-md-4 pl-md-5 sidebar ftco-animate">
                <div class="sidebar-box">
                    <form action="#" class="search-form">
                        <div class="form-group">
                            <span class="icon icon-search"></span>
                            <input type="text" class="form-control" placeholder="Type a keyword and hit enter">
                        </div>
                    </form>
                </div>

                @*<div class="block-21 mb-4 d-flex">
                    <a class="blog-img mr-4" href="/Course/CourseByLecturer/@Model.InstructorId" style="background-image: url(@Model.Instructor.Image);"></a>
                    <div class="text">
                        <h2>Instructor Info</h2>
                        <h3 class="heading"><a href="/Course/CourseByLecturer/@Model.InstructorId">@Model.Instructor.Name @Model.Instructor.Surname </a></h3>
                        <div class="meta">
                            <div><a href="#"><span class="icon-calendar"></span> @Model.Instructor.LastActivity</a></div>
                            <div><a href="#"><span class="icon-star"></span> @Model.Instructor.Rank</a></div>
                            <div><a href="#"><span class="icon-globe"></span> @Model.Instructor.City</a></div>
                        </div>
                    </div>
                </div>*@


                @await Component.InvokeAsync("CategoriesList")



                <div class="sidebar-box ftco-animate">
                    <h3 class="heading-3">Are you training more than 5 people?</h3>
                    <p>Give your team access to Udemy's top 19,000 courses anytime, anywhere.</p>
                </div>
            </div>

        </div>
    </div>
</section> <!-- .section -->

