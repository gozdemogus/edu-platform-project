@model List<Category>

<section class="ftco-section ftco-no-pt ftco-no-pb">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="category-wrap">
                    <div class="row no-gutters">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-2">
                                <div class="top-category text-center no-border-left">
                                    <h3><a href="/Category/Type/@item.CategoryID">@item.CategoryName</a></h3>
                                    <span class="icon @item.Icon"></span>
                                    <p><span class="number"></span> <span>@item.Description</span></p>

                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>