<style>
.animated_rainbow_2 {
    font-size: 20px;
/*    font-family: Verdana, Geneva, Tahoma, sans-serif;*/
    -webkit-animation: animatedBackground_b 5s linear infinite alternate;
}

@@keyframes animatedBackground_b{
    0% {color: #ff8b00}
    10% {color: #e8ff00}
    20% {color: #5dff00}
    30% {color: #00ff2e}
    40% {color: #00ffb9}
    50% {color: #00b9ff}
    60% {color: #002eff}
    70% {color: #5d00ff}
    80% {color: #e800ff}
    90% {color: #ff008b}
    100% {color: #ff0000}
}

</style>




@model List<CampaignViewModel>




<div class="sidebar-box bg-white p-4 ftco-animate">

    <center>
        <h4>Current Campaigns</h4>
        <ul>
            @foreach (var item in Model)
            {
                <i>@item.startDate.ToShortDateString() - @item.endDate.ToShortDateString()</i>
                <br />
                <b class="animated_rainbow_2">@item.campaignName</b>
                <b>@item.code</b>
                <br />
            }
        </ul>
      
    </center>

</div>

