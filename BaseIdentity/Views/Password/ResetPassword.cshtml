@using BaseIdentity.PresentationLayer.Models

@model ResetPassword

@{
    ViewData["Title"] = "Reset Password";
}
<br />
<div style="text-align: center;" align="center">
    <center> <h1>Reset Password</h1></center>
    <div class="text-danger" asp-validation-summary="All"></div>

    <form asp-action="ResetPassword" method="post" style="width: 40%; margin: 0 auto;">
        <div class="form-group">

            <input asp-for="Password" class="form-control" type="text" placeholder="Password" />
        </div>
        <div class="form-group">

            <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Confirm Password" />
        </div>
        <input type="hidden" asp-for="Email" class="form-control" />
        <input type="hidden" asp-for="Token" class="form-control" />
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>
