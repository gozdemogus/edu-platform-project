@model List<AppUser>

@await Component.InvokeAsync("Hero", "Instructors")

<section class="ftco-section ftco-candidates ftco-candidates-2 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 pr-lg-4">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-12">
                            <div class="team d-md-flex p-4 bg-white">
                                <div class="img" style="background-image: url(@item.Image);"></div>

                                <div class="text pl-md-4">
                                    <span class="location mb-0">@item.About  </span>
                                    <h2>@item.Name @item.Surname </h2>
                                    <span class="position">@item.Department</span>
                                    <p class="mb-2"><span class="icon icon-book" style="color:lightblue"></span> Total Courses:  @item.InstructedCourses.Count()</p>
                                    <p class="mb-2"><span class="icon icon-pencil" style="color:lightgreen"></span>  Speciality:  @item.Speciality</p>
                                    <p class="mb-2"><span class="icon icon-star" style="color:orange"></span> Rank:  @item.Rank</p>
                                    <span class="seen">@item.City</span>
                                    <br />
                                    <a href="/Course/CourseByLecturer/@item.Id" class="btn btn-warning" style="color: white">Courses</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
