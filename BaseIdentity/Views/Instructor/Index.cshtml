                                    <li><a href="#">4</a></li>
                                    <li><a href="#">5</a></li>
                                    <li><a href="#">&gt;</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>*@
            </div>
            @await Component.InvokeAsync("Sidebar")

        </div>
    </div>
</section>


