@using BaseIdentity.PresentationLayer.CQRS.Results.CourseResults


@model List<GetAllCourseQueryResult>

@{
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Language</th>
        <th>Price</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Language</td>
            <td>@item.Price</td>
            <td><a href="/Admin/CourseCQRS/GetCourse/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Admin/CourseCQRS/Delete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<br />
<br />
<a href="/Admin/CourseCQRS/AddCourse/">
    <button class="btn btn-success">Add Course</button>
</a>