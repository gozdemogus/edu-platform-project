@using BaseIdentity.EntityLayer.Concrete
@model List<AppUser>

@{
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}

<a href="/Admin/Report/DynamicExcel/" class="btn btn-warning"> <span class="icon-remove"></span> Excel Report</a>

<div class="container">
    <br /><br />
    <div class="card">
        <div class="card-body">
            <h1>Users</h1>

            <table class="table table-color">
                <tr>
                    <th>#</th>
                    <th>Name Surname</th>
                    <th>Mail</th>
                    <th>Date Of Birth</th>
                    <th>City</th>
                    <th>University</th>
                    <th>Department</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.Email</td>
                        <td>@item.dateOfBirth</td>
                        <td>@item.City</td>
                        <td>@item.University</td>
                        <td>@item.Department</td>
                        <td><a href="/Admin/Report/PdfReport/@item.Id" class="btn" style="background:cyan;border:cyan;color:white">PDF CV</a></td>
                          @*  <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
                            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>*@
                    </tr>
                }
            </table>

            @*<a href="/Register/Index/" class="btn btn-primary me-2">Yeni Üye Kaydı</a>*@
        </div>
    </div>
</div>