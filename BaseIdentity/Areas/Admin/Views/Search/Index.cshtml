@using BaseIdentity.PresentationLayer.Areas.Admin.Models
@model List<WebPage>

@{
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}


<div class="container">
    <br /><br />
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Search on Web</h3>
            <p class="card-description">
                A simple search engine
            </p>
            <div class="form-group row">
                <form method="post" asp-action="Index" asp-controller="Search" asp-area="Admin">
                    <div class="col">
                        <label>Type what you search</label>
                        <div id="the-basics">
                            <input class="typeahead" type="text" placeholder="Search" name="keyword">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <br />

    @if (Model != null)
    {
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Results</h3>
                <p class="card-description">
                    Find top results related to your search..
                </p>

                <table class="table table-bordered">
                    <tr>
                        <th>Header</th>
                        <th>Snippet</th>
                        <th>Date</th>
                        <th></th>

                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.name</td>
                            <td>@item.snippet.Substring(0, 40)</td>
                            <td>@item.dateLastCrawled</td>
                            <td><a href="@item.url" class="btn btn-outline-danger">See</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    }


</div>
