@using BaseIdentity.PresentationLayer.Areas.Admin.Models
@model List<WebPage>

@{
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}


<div class="container">
    <br /><br />
    <div class="card">
        <div class="card-body">
            <h1  style="color:lawngreen">Online Translator</h1>
            <p class="card-description">
              Select target language and type what you want to translate
            </p>
            <div class="form-group row">
                <form method="post" asp-action="Index" asp-controller="Translate" asp-area="Admin">
                    <div class="col">
                        <label>Type what you search</label>
                        <div class="form-group row">
                            <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Text *</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="exampleInputUsername2" name="keyword" placeholder="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputUsername2" class="col-sm-3 col-form-label">From</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="from">
                                    <option value="">--Select--</option>
                                    <option value="tr">Turkish</option>
                                    <option value="en">English</option>
                                    <option value="ru">Russian</option>
                                    <option value="de">German</option>
                                    <option value="fr">French</option>
                                </select>                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputUsername2" class="col-sm-3 col-form-label">To *</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="to">
                                    <option value="">--Select--</option>
                                    <option value="tr">Turkish</option>
                                    <option value="en">English</option>
                                    <option value="ru">Russian</option>
                                    <option value="de">German</option>
                                    <option value="fr">French</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
</form>
            </div>
        </div>
    </div>

    <br />

   
    @if (ViewBag.tr != null)
{
<div class="card">
    <div class="card-body">
        <h3 class="card-title">Results</h3>
        <p class="card-description">
            Find top results related to your search..

        </p>
        <p>@ViewBag.tr</p>
    </div>
</div>
}
        
</div>
