
@model List<Category>

@{
    Layout = "~/Views/Shared/_AreaLayout.cshtml";
}


<div class=col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 style="color:lawngreen">Category Index</h1>
            <p class="card-description">

            </p>
            <table class="table table-bordered" style="table-layout:fixed;">
                <tr style="color:black">
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Icon</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>@item.Icon </td>
         
                        <td>
                            <a href="/Admin/Category/Update/@item.CategoryID" class="icon text-center d-flex justify-content-center align-items-center icon mr-2">
                                <span class="icon-paper"></span>
                            </a>
                        </td>


                        <td>
                            <a href="/Admin/Category/Delete/@item.CategoryID" class="icon text-center d-flex justify-content-center align-items-center icon mr-2">
                                <span class="icon-trash" style="color:red"></span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
            <br />
            <br />
            <a href="/Admin/Category/AddCategory/">
                <button class="btn btn-success">Add Category</button>
            </a>
        </div>

    </div>
</div>